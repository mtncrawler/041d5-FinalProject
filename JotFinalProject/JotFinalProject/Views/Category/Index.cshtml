@model IEnumerable<JotFinalProject.Models.Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "_Layout";
}

<h2>Categories</h2>

<table class="table" border="0" >
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="text" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    <a class="linkbut smaller" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="linkbut smaller" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    <a class="linkbut" asp-action="Create">Create New Category</a>


