@using JotFinalProject.Models
@model JotFinalProject.Models.Note
@{
    Layout = "_Layout";
}
<div style="display:flex;">
    <div>
        <img src="@ViewBag.ImgUrl" style="max-width: 600px;" />
    </div>

    <div>
        <form asp-controller="Home" asp-action="Details" method="post">
            <input hidden asp-for="ID" value="@Model.ID" />
            <input hidden asp-for="UserID" value="@Model.UserID"/>
            <textarea asp-for="Text" rows="20" cols="50">
                @Model.Text
            </textarea>
            <button>Save</button>
        </form>
    </div>
</div>
